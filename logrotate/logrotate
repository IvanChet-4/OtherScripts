/opt/*/logs/*.log {
    su voip voip                          # Выполнять ротацию логов под пользователем voip из группы voip
    daily                                 # Периодичность ротации (ежедневно)
    rotate 365                            # Хранить 365 архивов
    compress                              # Сжимать старые логи
    missingok                             # Не выдавать ошибку, если файл отсутствует
    notifempty                            # Не ротировать, если файл пустой
    maxsize 2048M                         # Указывает максимальный размер лог-файла. Если лог-файл превышает 2048 мегабайт, он будет ротироваться, даже если не пришло время для плановой ротации.
    copytruncate                          # Этот параметр указывает logrotate сначала создать копию текущего лог-файла, а затем обрезать оригинал до нуля
    olddir /var/log/ncc-dialer-oldlog     # Указывает директорию, в которую будут перемещены старые лог-файлы после ротации
    dateext dateformat -%d-%m-%Y-%H-%M-%S # Добавление даты к файлу ротации
    nodelaycompress                       # Ротировать первый файл лога
    copytruncate                          # сбрасывать файл журнала после копирования
}
